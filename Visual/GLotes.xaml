<Window x:Class="Visual.GLotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual"
        mc:Ignorable="d"
        Title="Gestión de Lotes" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderThickness="1" BorderBrush="Black" Grid.Column="0">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="Black"  BorderThickness="5" BorderBrush="Aqua">
                    <Grid>
                        <TextBlock Text="Lotes" FontSize="23" Foreground="White" VerticalAlignment="Top" Canvas.Left="92" Canvas.Top="3"  />
                    </Grid>
                </Border>

                <ListView Grid.Row="1" ItemsSource="{Binding lotes}">                    
                </ListView>

                <Border Grid.Row="2" Background="Black"  BorderThickness="5" BorderBrush="Aqua">
                    <Grid>
                        <Button Content="Atras" Height="25" Width="55" Canvas.Left="10" Canvas.Top="5" Click="MW" Margin="10,5,173,5"/>
                        <Button Content="Agregar" Height="25" Width="55" Canvas.Left="110" Canvas.Top="5" Click="AL" Margin="113,5,70,5"/>
                        <Button Content="Quitar" Height="25" Width="55" Canvas.Left="175" Canvas.Top="5" Click="QL" Margin="173,5,10,5"/>
                    </Grid>
                </Border>


            </Grid>
        </Border>

        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <Canvas Grid.Row="0" >
                <TextBlock Text="{Binding lote.Producto}" />
                    <TextBlock Text="{Binding lote.Etapa}" Canvas.Top="50" />
                    <TextBlock Text="{Binding lote.Initial_date}" Canvas.Top="70" />
                    <TextBlock Text="{Binding lote.Final_date}" Canvas.Top="90" />
            </Canvas>

            <Border Grid.Row="1" Background="Black"  BorderThickness="5" BorderBrush="Aqua">
                <Grid>
                    <Button Content="Modificar" Height="25" Width="65" Canvas.Left="550" Canvas.Top="5" Click="ML" />
                </Grid>
            </Border>

        </Grid>

    </Grid>
</Window>
